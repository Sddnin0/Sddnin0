local toggleButton = script.Parent
local targetFrame = script.Parent.Parent:FindFirstChild("TargetFrame")

-- Check if the target frame exists
if not targetFrame then
    warn("TargetFrame not found!")
    return
end

-- Set the button color to purple
toggleButton.BackgroundColor3 = Color3.fromRGB(128, 0, 128)

-- Optional: Set initial button text
toggleButton.Text = "Hide Frame"

local isVisible = true

toggleButton.MouseButton1Click:Connect(function()
    isVisible = not isVisible
    targetFrame.Visible = isVisible

    -- Update button text based on visibility
    if isVisible then
        toggleButton.Text = "Hide Frame"
    else
        toggleButton.Text = "Show Frame"
    end
end)
