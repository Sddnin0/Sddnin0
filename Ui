local toggleButton = script.Parent -- Reference to the button
local targetFrame = script.Parent.Parent:WaitForChild("TargetFrame") -- Locate the target frame

-- Set button color to purple
toggleButton.BackgroundColor3 = Color3.fromRGB(128, 0, 128) -- Purple

-- Variable to track visibility state
local isVisible = true

-- Function to toggle visibility when button is clicked
toggleButton.MouseButton1Click:Connect(function()
    isVisible = not isVisible -- Toggle the boolean value
    targetFrame.Visible = isVisible -- Apply visibility change
end)
